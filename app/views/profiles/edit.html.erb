<body class="body2">  
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center"><%= t 'profiles.edit.theme' %></h5>
            <%= form_for(@profile ,html: {class: "form-signin"} ) do |f| %>
            
              <div>
                <div class="text-center mb-4">
                  <% if @profile.image? %>
                    <%= image_tag @profile.image.url, size:'300x300', :class => "rounded-circle" %>
                  <% else %>
                    <img src="/img/noimage.jpg" class="avatar img-circle rounded-circle" alt="avatar">
                  <% end %>
                  <h6 class="mt-3 mb-3"><%= t 'profiles.edit.photo' %></h6>
          
                  <%= f.file_field :image, :class => "form-control" %>
                  <%= f.hidden_field :image_cache %>
                </div>
              </div>
              
              <div class="form-group">
                <%= f.label :username, t('profiles.username') %>
                <%= f.text_field :username, :class => "form-control mb-4", :placeholder => "User name" , autofocus: true, :required => true %>
              </div>

              <div class="selectform">
                <%= f.label :sex , t('profiles.gender') %><br />
                <%= f.select :sex, Profile.sexes_i18n.keys.map {|k| [Profile.sexes_i18n[k], k]}, :class => "custom-select", :required => true %>
              </div>
              
              <div class="form-group">
                <%= f.label :birth, t('profiles.birth') %><br />
                <%= f.date_field :birth, :class => "form-control mb-4", :required => true, :disabled => true  %>
              </div>
              
              <div class="selectform">
                <%= f.label :nationality, t('profiles.nationality') %><br />
                <%= f.select :nationality, Profile.nationalities_i18n.keys.map {|k| [Profile.nationalities_i18n[k], k]}, :class => "custom-select", :required => true %>
              </div>
              
              <div class="form-group">
                <%= f.label :height, t('profiles.height') %><br />
                <%= f.number_field :height, :class => "form-control mb-4"  %>
              </div>
              
              <div class="selectform">
                <%= f.label :occupation, t('profiles.occupation') %><br />
                <%= f.select :occupation, Profile.occupations_i18n.keys.map {|k| [Profile.occupations_i18n[k], k]}, :class => "custom-select"  %>
              </div>
              
              <div class="form-group">
                <%= f.label :singleword, t('profiles.singleword') %>
                <%= f.text_area :singleword, :class => "form-control", :placeholder => "Enter your sigle word" %>
              </div>
              
              <hr class="my-4">

              <%= f.submit t('profiles.edit.editting'), :class => "btn btn-lg btn-primary btn-block text-uppercase actions" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body> 