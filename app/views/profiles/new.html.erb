<body class="body2">  
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Setting my profile</h5>
            <%= form_for(@profile ,html: {class: "form-signin"} ) do |f| %>
              
              <div>
                <div class="text-center mb-4">
                  <img src="//placehold.it/200" class="avatar img-circle rounded-circle" alt="avatar">
                  <h6 class="mt-3 mb-3">Upload a photo...</h6>
          
                  <%= f.file_field :image, :class => "form-control" %>
                  <%= f.hidden_field :image_cache %>
                </div>
              </div>
              
              <div class="form-group">
                <%= f.label :username, 'Username:' %>
                <%= f.text_field :username, :class => "form-control mb-4", :placeholder => "User name" , autofocus: true, :required => true %>
              </div>

              <div class="selectform">
                <%= f.label :sex , 'Gender:' %><br />
                <%= f.select :sex, Profile.sexes.keys.map {|k| [k, k]}, :class => "custom-select", :required => true %>
              </div>
              
              <div class="form-group">
                <%= f.label :birth, 'Birth:' %><br />
                <%= f.date_field :birth, :class => "form-control mb-4", :required => true  %>
              </div>
              
              <div class="selectform">
                <%= f.label :nationality, 'Nationality:' %><br />
                <%= f.select :nationality, Profile.nationalities.keys.map {|k| [k, k]}, :class => "custom-select", :required => true %>
              </div>
              
              <div class="form-group">
                <%= f.label :height, 'Height:' %><br />
                <%= f.number_field :height, :class => "form-control mb-4"  %>
              </div>
              
              <div class="selectform">
                <%= f.label :occupation, 'Occupation:' %><br />
                <%= f.select :occupation, Profile.occupations.keys.map {|k| [k, k]}, :class => "custom-select"  %>
              </div>
              
              <div class="form-group">
                <%= f.label :singleword, 'Singleword:' %>
                <%= f.text_area :singleword, :class => "form-control", :placeholder => "Enter your sigle word" %>
              </div>
              
              <hr class="my-4">

              <%= f.submit "Create account", :class => "btn btn-lg btn-primary btn-block text-uppercase actions" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body> 