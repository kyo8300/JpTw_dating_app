
<body class="body2">  
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5 py-4">
          <div class="card-body">
            <h5 class="card-title text-center py-2">Forgot your password?</h5>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "form-signin", method: :post} ) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-label-group field pb-4">
                <%= f.email_field :email, :class => "form-control", :placeholder => "Email address" , autofocus: true, :autocomplete => "email" %>
                <%= f.label :email %>
                 <!-- ??? -->
              </div>

              <%= f.submit "Reset password", :class => "btn btn-lg btn-primary btn-block text-uppercase actions pb-3" %>
              <hr class="my-4">
              <div class="loginlabel"><%= render "devise/shared/links" %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>  