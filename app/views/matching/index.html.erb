<div class="container mt-4">
  <div class="row">
    <div class="col">
        <div class="user-widget-2">
            <ul class="list-unstyled">
                <% @users.each do |user| %>
                <li class="media border-bottom pb-4">
                    <% if user.profile.image? %>
                      <%= image_tag user.profile.image.thumb.url, :class => "rounded-circle d-flex align-self-center" %>
                    <% else %>  
                      <img class="rounded-circle d-flex align-self-center" src="../img/noimage.jpg" alt="avatar">
                    <% end %>
                    <div class="media-body">
                        <h5 class="mt-2"><%= user.profile.username %> <%= user.profile.age %>歳</h5>
                        <% if user.profile.singleword? %>
                          <p class="text-dark"><%= truncate(user.profile.singleword, length: 17) %></p>
                        <% end %>
                        <p>
                            <span class="badge badge-outline badge-sm badge-info badge-pill mt-2"><%= link_to 'チャットを始める', matching_path(user.id), class:"text-info", style:"text-decoration: none" %></span>
                            <span class="badge badge-outline badge-sm badge-danger badge-pill mt-2"><%= link_to 'マッチングを削除', '#', class:"text-danger", style:"text-decoration: none" %></span>
                        </p>
                    </div>
                </li>
                <% end %>
            </ul>
        </div>
    </div>
  </div>
</div>
